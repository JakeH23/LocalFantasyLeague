<div class="top-row ps-3 navbar">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="">
            <i class="fas fa-futbol" style="font-size: 1.5rem; margin-right: 0.5rem;" aria-hidden="true"></i>
            <span style="font-family: 'Arial Black', sans-serif; font-size: 1.5rem; color: #FFD700;">KickAbout</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- General Links -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="matches">
                <span class="bi bi-calendar-event" aria-hidden="true"></span> Matches
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="bi bi-person-fill" aria-hidden="true"></span> Players
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="seasons">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Seasons
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="teams">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Teams
            </NavLink>
        </div>

        <!-- Fantasy Section -->
        @if (UserSession.CurrentUser?.Id != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user-fantasy">
                    <span class="bi bi-cash-stack" aria-hidden="true"></span> My Fantasy Picks
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="league-table">
                    <span class="bi bi-bar-chart-fill" aria-hidden="true"></span> Fantasy League Table
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="fantasy-details">
                    <span class="bi bi-bar-chart-fill" aria-hidden="true"></span> Fantasy Points
                </NavLink>
            </div>
        }

        <!-- Admin Section -->
        @if (UserSession.CurrentUser?.Id != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin">
                    <span class="bi bi-gear-fill" aria-hidden="true"></span> Admin
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        UserSession.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}
