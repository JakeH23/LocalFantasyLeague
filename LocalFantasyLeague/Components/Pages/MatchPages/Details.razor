                    <div class="player-name text-dark fw-bold" style="font-size:10px">@player.Name</div>
                    <div class="player-points text-muted" style="font-size:10px">Points: @player.TotalPoints</div>
                </div>
            </div>
        }
        </div>
    </div>;
}
