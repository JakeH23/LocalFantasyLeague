@page "/teams"
@inject IDbContextFactory<LocalFantasyLeagueContext> DbFactory

<h3>Teams</h3>
<a class="btn btn-primary mb-3" href="/teams/create">Add Team</a>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>
                        <a href="/teams/details/@team.Id">Details</a> |
                        <a href="/teams/edit/@team.Id">Edit</a> |
                        <a href="/teams/delete/@team.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    private List<Team> Teams = new();

    protected override async Task OnInitializedAsync()
    {
        using var db = await DbFactory.CreateDbContextAsync();
        Teams = await db.Teams.ToListAsync();
    }
}
